<%= render 'partials/navbar' %>
<div class="row">

  <div class="d-flex mx-auto logo">
    <%= link_to(image_tag("kitchy_Logo.png"), root_path) %>
  </div>
<div class="container">
  <div class="d-flex mx-auto col">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title message-header">Stockists</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @users.each do |user| %>
            <li><%= link_to user.email, conversations_path(user_id: user), remote: true, method: :post %></li>
          <% end %>
        </ul>
      </div>
      <div class="col">
        <ul id="conversations-list">
          <% @conversations.each do |conversation| %>
            <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>


</div>
